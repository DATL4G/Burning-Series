<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="colorPrimaryContainer">@color/primaryColor</item>
        <item name="colorOnPrimaryContainer">@color/primaryTextColor</item>

        <item name="colorSecondary">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>

        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/errorTextColor</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialAlertDialog</item>

        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/backgroundTextColor</item>

        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="collapsingToolbarLayoutStyle">@style/Widget.App.CollapsingToolbar</item>
    </style>

    <style name="Theme.AppTheme" parent="AppTheme" />

    <style name="ActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/coloredBackgroundTextColor</item>
        <item name="tint">@color/coloredBackgroundTextColor</item>
    </style>
    
    <style name="Widget.App.CollapsingToolbar" parent="Widget.Material3.CollapsingToolbar.Medium">
        <item name="collapsedTitleTextColor">@color/coloredBackgroundTextColor</item>
        <item name="expandedTitleTextColor">@color/backgroundTextColor</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorControlNormal">@color/coloredBackgroundTextColor</item>
        <item name="android:colorControlNormal">@color/coloredBackgroundTextColor</item>
    </style>

    <style name="ThemeOverlay.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/MaterialAlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.NegativeButton</item>
    </style>

    <style name="MaterialAlertDialog.NegativeButton" parent="Widget.Material3.Button.TextButton.Dialog.Icon">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="MaterialAlertDialog.Button" parent="Widget.Material3.Button.TextButton.Dialog.Icon">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="MaterialErrorSnackbar" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">@color/errorColor</item>
        <item name="android:backgroundTint">@color/errorColor</item>
    </style>

    <style name="MaterialErrorSnackbar.TextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/errorTextColor</item>
    </style>

    <style name="MaterialErrorSnackbar.Button" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/errorTextColor</item>
    </style>

    <style name="MaterialWarningSnackbar" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">@color/warningColor</item>
        <item name="android:backgroundTint">@color/warningColor</item>
    </style>

    <style name="MaterialWarningSnackbar.TextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/warningTextColor</item>
    </style>

    <style name="MaterialWarningSnackbar.Button" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/warningTextColor</item>
    </style>

    <style name="MaterialErrorSnackbarTheme">
        <item name="snackbarStyle">@style/MaterialErrorSnackbar</item>
        <item name="snackbarTextViewStyle">@style/MaterialErrorSnackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/MaterialErrorSnackbar.Button</item>
    </style>

    <style name="MaterialWarningSnackbarTheme">
        <item name="snackbarStyle">@style/MaterialWarningSnackbar</item>
        <item name="snackbarTextViewStyle">@style/MaterialWarningSnackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/MaterialWarningSnackbar.Button</item>
    </style>

    <style name="MaterialFullCardView" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Medium.DefaultCorner</item>
    </style>

    <style name="ShapeAppearance.App.Medium.DefaultCorner" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">0dp</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="shapeAppearanceLargeComponent">@style/RoundedBottomSheetComponent</item>
        <item name="enableEdgeToEdge">true</item>

        <item name="windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="enableEdgeToEdge">true</item>

        <item name="windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="RoundedBottomSheetComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:radius">16dp</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="TextAppearanceEmpty">
        <item name="android:textColor">#00000000</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="ShapeAppearance.ImageView.VideoFrame" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">8dp</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.ImageView.Cover.Large" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="ShapeAppearance.ImageView.Cover.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/Theme.AppTheme</item>
    </style>
</resources>