<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="colorPrimaryContainer">@color/primaryColor</item>
        <item name="colorOnPrimaryContainer">@color/primaryTextColor</item>

        <item name="colorSecondary">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>

        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/errorTextColor</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialAlertDialog</item>

        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/backgroundTextColor</item>

        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="collapsingToolbarLayoutStyle">@style/Widget.App.CollapsingToolbar</item>
    </style>

    <style name="ActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/coloredBackgroundTextColor</item>
        <item name="tint">@color/coloredBackgroundTextColor</item>
    </style>

    <style name="Widget.App.CollapsingToolbar" parent="Widget.Material3.CollapsingToolbar.Medium">
        <item name="collapsedTitleTextColor">@color/coloredBackgroundTextColor</item>
        <item name="expandedTitleTextColor">@color/backgroundTextColor</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorControlNormal">@color/coloredBackgroundTextColor</item>
        <item name="android:colorControlNormal">@color/coloredBackgroundTextColor</item>
    </style>

    <style name="ThemeOverlay.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorSecondary">@color/primaryTextColor</item>
        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/MaterialAlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.NegativeButton</item>
    </style>

    <style name="MaterialAlertDialog.Button" parent="Widget.Material3.Button.TextButton.Dialog.Icon">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
</resources>